<Window x:Class="InventoryApp.View.CatalogArticulo.CatalogArticuloView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CatalogArticuloView" Height="400" Width="700">
    <Grid Name="GridPrincipal" DataContext="{StaticResource catalogArticuloViewModel}">

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" 
                  SelectedItem="{Binding CatalogArticuloModel.SelectedArticulo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                  CanUserAddRows="False" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="dtGridItems" 
                  VerticalAlignment="Stretch" ItemsSource="{Binding CatalogArticuloModel.Articulos}" 
                  MouseDoubleClick="dtGridItems_MouseDoubleClick">
            <DataGrid.Columns>
                <!--<DataGridCheckBoxColumn x:Name="check"  MinWidth="50" Header="" SortMemberPath="IsSelected" Binding="{Binding Path=IsChecked,Mode=TwoWay}" />-->
                <DataGridTextColumn Header="Articulo" Width="100" x:Name="articuloNombre" Binding="{Binding Path=ARTICULO1}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Categoria" Width="100" x:Name="categoriaNombre" Binding="{Binding Path=CATEGORIA.CATEGORIA_NAME}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Marca" Width="100" x:Name="marcaaNombre" Binding="{Binding Path=MARCA.MARCA_NAME}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Modelo" Width="100" x:Name="modeloNombre" Binding="{Binding Path=MODELO.MODELO_NAME}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Equipo" Width="100" x:Name="equipoaNombre" Binding="{Binding Path=EQUIPO.EQUIPO_NAME}" IsReadOnly="True"/>
                <!--<DataGridTextColumn Header="TOTAL" Width="*" x:Name="Total" Binding="{Binding Path=total}" IsReadOnly="True"/>-->
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="CONSULTA DE DATOS" Height="28" HorizontalAlignment="Left" Margin="5,0,0,0" Name="lblNameConsulta" Width="154" />
        <Button Content="Agregar" Height="23" HorizontalAlignment="Left" Margin="591,0,0,0" 
                Name="btnAgregar" VerticalAlignment="Stretch" Width="75" Click="btnAgregar_Click" />
    </Grid>
</Window>
