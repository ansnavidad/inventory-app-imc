<Window xmlns:my="clr-namespace:InventoryApp.View.Recibo"  x:Class="InventoryApp.View.Recibo.DlgAddFacturaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Factura" Height="Auto" Width="700">
    <Grid>
        <DockPanel>
            <ContentControl HorizontalAlignment="Stretch" Name="contentControl1" VerticalAlignment="Stretch" DockPanel.Dock="Top">
                <my:AddFacturaView />
            </ContentControl>
            <DockPanel HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" DockPanel.Dock="Bottom" >
                <Button Name="btnAgregar" Content="Agregar" Height="23" Width="75" HorizontalAlignment="Left" Command="{Binding AddFacturaCommand}" Click="btnAgregar_Click" />
                <Button Content="Cancelar" Height="23"  Width="75" HorizontalAlignment="Right" Margin="0,0,0,0" Click="Button_Click" />
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
