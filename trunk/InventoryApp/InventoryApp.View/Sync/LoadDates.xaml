<Window x:Class="InventoryApp.View.Sync.LoadDates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cargando datos espere un momento ..." Width="auto" Height="auto" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="123" d:DesignWidth="403" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">
    <Grid Height="77" Width="375">
        <Label Content="{Binding Mensaje}"  HorizontalAlignment="Left"  Name="label1" VerticalAlignment="Top" FontSize="15" FontFamily="Calibri" />
        <CheckBox Content="CheckBox" Height="16" HorizontalAlignment="Left" Margin="28,25,0,0" Name="checkBox1" IsChecked="{Binding IsDone, NotifyOnTargetUpdated=True}" TargetUpdated="checkBox1_TargetUpdated"  VerticalAlignment="Top" Visibility="Collapsed" />
        <ProgressBar IsIndeterminate="True" Height="25" HorizontalAlignment="Left" Margin="10,33,0,0" Name="progressBar1" VerticalAlignment="Top" Width="355" />
    </Grid>
</Window>